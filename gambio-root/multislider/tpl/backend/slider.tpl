<form role="form" class="slider-form">
    <div class="row">
        <div class="col-sm-6">
            <h3 class="slider-h3">
                neuer Slider <input style="width:240px; display: inline-block;" type="text" class="form-control" name="slider_name" value="{$slider.slider_name}" placeholder="Slidername">
            </h3>
        </div>
        <div class="col-sm-6 text-right">
            <a class="btn btn-default" href="{$back_url}">&Uuml;bersicht</a>
        </div>
    </div>


    <div class="misc-data panel-group" id="accordion">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion" href="#SliderSettings">
                        Slider Grundeinstellungen
                    </a>
                </h4>
            </div>
            <div id="SliderSettings" class="panel-collapse collapse">
                <div class="panel-body">

                    <div class="row">
                        <div class="col-sm-3">
                            <strong>Autoplay</strong>
                            <select name="autoPlay" class="form-control">
                                <option value="false"{if $slider_data.autoPlay == 'false'} selected=""{/if}>nein</option>
                                <option value="true"{if $slider_data.autoPlay == 'true' or $slider_data.autoPlay == ''} selected=""{/if}>ja</option>
                            </select>
                        </div>

                        <div class="col-sm-3">
                            <strong>bei Mouse-Over Pause</strong>
                            <select name="pauseOnHover" class="form-control">
                                <option value="false"{if $slider_data.pauseOnHover == 'false'} selected=""{/if}>nein</option>
                                <option value="true"{if $slider_data.pauseOnHover == 'true' or $slider_data.pauseOnHover == ''} selected=""{/if}>ja</option>
                            </select>
                        </div>

                        <div class="col-sm-3">
                            <strong>Timerart</strong>
                            <select name="timer" class="form-control">
                                <option value="pie"{if $slider_data.timer == 'pie' or $slider_data.timer == ''} selected=""{/if}>Kreis</option>
                                <option value="bar"{if $slider_data.timer == 'bar'} selected=""{/if}>Balken</option>
                                <option value="none"{if $slider_data.timer == 'none'} selected=""{/if}>keiner</option>
                            </select>
                        </div>

                        <div class="col-sm-3">
                            <strong>Timer Position</strong>
                            <select name="timerAlign" class="form-control">
                                <option value="topLeft"{if $slider_data.timerAlign == 'topLeft'} selected=""{/if}>oben links</option>
                                <option value="top"{if $slider_data.timerAlign == 'top'} selected=""{/if}>oben</option>
                                <option value="topRight"{if $slider_data.timerAlign == 'topRight' or $slider_data.timerAlign == ''} selected=""{/if}>oben rechts</option>
                                <option value="bottomRight"{if $slider_data.timerAlign == 'bottomRight'} selected=""{/if}>unten rechts</option>
                                <option value="bottom"{if $slider_data.timerAlign == 'bottom'} selected=""{/if}>unten</option>
                                <option value="bottomLeft"{if $slider_data.timerAlign == 'bottomLeft'} selected=""{/if}>unten links</option>
                            </select>
                        </div>

                    </div><br>

                    <div class="row">

                        <div class="col-sm-3">
                            <strong>Pause</strong> <small><em>1000ms = 1s</em></small>
                            <div class="input-group">
                                <input type="number" min="0" step="500" class="form-control" name="delay" value="{$slider_data.duration|default:4000}">
                                <span class="input-group-addon">ms</span>
                            </div>
                        </div>

                        <div class="col-sm-3">
                            <strong>Breite x H&ouml;he</strong>
                            <div class="input-group">
                                <input type="number" min="0" name="width" class="form-control input-sm" placeholder="Breite" value="{$slider_data.width|default:770}">
                                <span class="input-group-addon">x</span>
                                <input type="number" min="0" name="height" class="form-control input-sm" placeholder="H&ouml;he" value="{$slider_data.height|default:400}">
                                <span class="input-group-addon">px</span>
                            </div>

                        </div>

                    </div><br>

                    <div class="row">
                        <div class="col-sm-3">
                            <strong>Navigation-Buttons</strong>
                            <select name="navButtons" class="form-control">
                                <option value="small"{if $slider_data.navButtons == 'small' or $slider_data.navButtons == ''} selected=""{/if}>kleine</option>
                                <option value="large"{if $slider_data.navButtons == 'large'} selected=""{/if}>groÃŸe</option>
                                <option value="none"{if $slider_data.navButtons == 'none'} selected=""{/if}>keine</option>
                            </select>
                        </div>

                        <div class="col-sm-3">
                            <strong>Navigations-Buttons ausserhalb</strong>
                            <select name="cpanelOutside" class="form-control">
                                <option value="false"{if $slider_data.cpanelOutside == 'false' or $slider_data.cpanelOutside == ''} selected=""{/if}>nein</option>
                                <option value="true"{if $slider_data.cpanelOutside == 'true'} selected=""{/if}>ja</option>
                            </select>
                        </div>

                        <div class="col-sm-3">
                            <strong>Navigations-Buttons Mausover</strong>
                            <select name="cpanelOnHover" class="form-control">
                                <option value="false"{if $slider_data.cpanelOnHover == 'false' or $slider_data.cpanelOnHover == ''} selected=""{/if}>nein</option>
                                <option value="true"{if $slider_data.cpanelOnHover == 'true'} selected=""{/if}>ja</option>
                            </select>
                        </div>

                        <div class="col-sm-3">
                            <strong>Navigation</strong>
                            <select name="thumbnails" class="form-control">
                                <option value="none"{if $slider_data.thumbnails == 'none'} selected=""{/if}>keine</option>
                                <option value="bullet"{if $slider_data.thumbnails == 'bullet'} selected=""{/if}>Punkte</option>
                                <option value="number"{if $slider_data.thumbnails == 'number' or $slider_data.thumbnails == ''} selected=""{/if}>Zahlen</option>
                                <option value="text"{if $slider_data.thumbnails == 'text'} selected=""{/if}>Text</option>
                                <option value="image"{if $slider_data.thumbnails == 'image'} selected=""{/if}>Thumbnails</option>
                                <option value="empty"{if $slider_data.thumbnails == 'empty'} selected=""{/if}>leer</option>
                            </select>
                        </div>
                    </div><br>

                    <div class="row">

                        <div class="col-sm-3">
                            <strong>Navigations-Buttons</strong>
                            <select name="cpanelAlign" class="form-control">
                                <option value="bottom"{if $slider_data.control_position == 'bottom' or $slider_data.control_position == ''} selected=""{/if}>unten</option>
                                <option value="bottomLeft"{if $slider_data.control_position == 'bottomLeft'} selected=""{/if}>unten links</option>
                                <option value="bottomRight"{if $slider_data.control_position == 'bottomRight'} selected=""{/if}>unten rechts</option>
                                <option value="top"{if $slider_data.control_position == 'top'} selected=""{/if}>oben</option>
                                <option value="topLeft"{if $slider_data.control_position == 'topLeft'} selected=""{/if}>oben links</option>
                                <option value="topRight"{if $slider_data.control_position == 'topRight'} selected=""{/if}>oben rechts</option>
                                <option value="left"{if $slider_data.control_position == 'left'} selected=""{/if}>links</option>
                                <option value="leftTop"{if $slider_data.control_position == 'leftTop'} selected=""{/if}>links oben</option>
                                <option value="leftBottom"{if $slider_data.control_position == 'unten'} selected=""{/if}>links unten</option>
                                <option value="right"{if $slider_data.control_position == 'unten'} selected=""{/if}>rechts</option>
                                <option value="rightTop"{if $slider_data.control_position == 'unten'} selected=""{/if}>rechts oben</option>
                                <option value="rightBottom"{if $slider_data.control_position == 'unten'} selected=""{/if}>rechts unten</option>
                            </select>
                        </div>

                        <div class="col-sm-3">
                            <strong>Tooltip Ã¼ber der Navigation</strong>
                            <select name="tooltip" class="form-control">
                                <option value="none"{if $slider_data.tooltip == 'none' or $slider_data.tooltip == ''} selected=""{/if}>keiner</option>
                                <option value="text"{if $slider_data.tooltip == 'text'} selected=""{/if}>Text</option>
                                <option value="image"{if $slider_data.tooltip == 'image'} selected=""{/if}>Bild-Thumbnail</option>
                            </select>
                        </div>

                        <div class="col-sm-3">
                            <strong>Playbutton anzeigen</strong>
                            <select name="playButton" class="form-control">
                                <option value="false"{if $slider_data.playButton == 'false' or $slider_data.playButton == ''} selected=""{/if}>nein</option>
                                <option value="true"{if $slider_data.playButton == 'true'} selected=""{/if}>ja</option>
                            </select>
                        </div>

                    </div><br>
                </div>
            </div>
        </div>

    </div>
    <br>

    <ul class="nav nav-tabs" role="tablist" id="sliderTabs">
        {$slider_li}
        <li class="one-more-slide">
            <a href="#" role="button">
                <i class="fa fa-plus"></i>
            </a>
        </li>
    </ul>

    <div class="tab-content">
        {$slider_tpl}
    </div>

    <p>
        <button class="btn btn-primary slider-save-button mt10" type="button">
            Speichern
        </button>
    </p>

    <input type="hidden" class="slider_id" value="{$slider_id}">
    <input type="hidden" class="slider_position" value="startpage">
</form>
